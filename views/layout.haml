%html
  %head
    %title StoryPrinter - Let's make some stories to work on
    %style
      :sass
        body
          background: #000 url(/css_images/body_bg.jpg)
          font: 14px Arial, sans-serif
          padding: 0px
        h1
          text-align: center
          font: 80px/80px Arial, sans-serif
          color: #fff
          margin: 0px
          padding: 0px
          text-transform: uppercase
          text-shadow: 0px 0px 5px #000
          span
            color: #ff0000
            font-weight: bold
        .body_container
          margin: auto
          width: 750px
          padding: 25px
          background: #fff
          -moz-border-radius: 10px
          -moz-box-shadow: 0px 0px 5px #000
          form.upload
            text-align: right
            background: -moz-linear-gradient(top, #373737, #555)
            padding: 10px
            -moz-border-radius-topleft: 10px
            -moz-border-radius-topright: 10px
            margin-bottom: 5px
            input
              margin-right: 10px
            
          
          .stories
            .story
              margin-bottom: 5px
              position: relative
              border: 1px solid #e5e5e5
              .header
                overflow: hidden
                .index, .project, .category, .estimate
                  float: left
                  padding: 5px 10px
                  color: #fff
                  text-shadow: 0 1px 0 #000
                .index
                  padding: 5px
                .estimate
                  float: right
                  text-shadow: none
                  font-weight: bold
              .description
                padding: 20px 50px 20px 20px
                background-color: rgba(255, 255, 255, 0.3)
            
            $red:     #ed1c24
            $orange:  #f7941d
            $green:   #39b54a
            $teal:    #00a99d
